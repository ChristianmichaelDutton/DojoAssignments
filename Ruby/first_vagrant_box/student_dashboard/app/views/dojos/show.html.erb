<h1><%= @dojo.branch %></h1>

<% if flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>


<p>Addres: <%= @dojo.street %></p>
<p>City: <%= @dojo.city %> State: <%= @dojo.state %></p>

<h2>Student Roster</h2>

<table>
	<thead>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Email</th>
		<th>Actions</th>
	</thead>
	<tbody>
	<% @students.each do |student| %>
		<tr>
			<td><%= student.first_name %></td>
			<td><%= student.last_name %></td>
			<td><%= student.email %></td>
			<td>
				<%= link_to "Show", "/dojos/#{@dojo.id}/students/#{student.id}" %> |
				<%= link_to "Edit", "/dojos/#{@dojo.id}/students/#{student.id}/edit" %> |
				<%= link_to "Delete", "/dojos/#{@dojo.id}/students/#{student.id}", data: { method: :delete, confirm: "Are you sure?" } %>
			</td>
		</tr>
	<% end %>
	</tbody>
</table>

<%= link_to "Home", "/dojos" %> | <%= link_to "Edit", "dojos/#{@dojo.id}/edit" %> | <%= link_to "Add Student", "/dojos/#{@dojo.id}/students/new" %>
