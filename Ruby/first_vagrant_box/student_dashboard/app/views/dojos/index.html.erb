<style media="screen">
  *{
    font-family: "Adobe Caslon Pro", sans-serif;
  }

  table{
    width: 750px;
  }

  th, td {
      border-bottom: 1px solid #ddd;
      padding: 15px;
      text-align: left;
  }

  tr:hover {background-color: #f5f5f5}

  tr:nth-child(even) {background-color: #f2f2f2}

  a, input{
    padding-left: 5px;
    padding-right: 10px;
  }

</style>

<h1>Listing <%= pluralize(@dojos.count, "Dojo") %></h1>

<% if flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>

<table>
	<thead>
		<th>Coding Dojo Branch</th>
		<th>Street</th>
		<th>City</th>
		<th>State</th>
		<th>Actions</th>
	</thead>
	<tbody>
		<% @dojos.each do |dojo| %>
		<tr>
			<td><%= dojo.branch %></td>
			<td><%= dojo.street %></td>
			<td><%= dojo.city %></td>
			<td><%= dojo.state %></td>
			<td>
				<%= link_to "Show", "dojos/#{dojo.id}" %> |
				<%= link_to "Edit", "dojos/#{dojo.id}/edit" %> |
				<%= link_to "Delete", "dojos/#{dojo.id}", data: { method: :delete, confirm: "Are you sure?" } %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= link_to "New Dojo", "dojos/new" %>
