<style media="screen">
  *{
    font-family: "Adobe Caslon Pro", sans-serif;
  }

  th, td {
      border-bottom: 1px solid #ddd;
      padding: 15px;
      text-align: left;
  }

  tr:hover {background-color: #f5f5f5}

  tr:nth-child(even) {background-color: #f2f2f2}
  a{
    padding-left: 5px;
  }

</style>

<h1>Listing Dojos</h1>
<table>
  <thead>
    <tr>
      <td>Branch</td>
      <td>Street Address</td>
      <td>City</td>
      <td>State</td>
      <td>Action</td>
    </tr>
  </thead>
  <tbody>
  <% @dojo.each do |d| %>
    <tr>
      <td><%= d.branch %></td>
      <td><%= d.street %></td>
      <td><%= d.city %></td>
      <td><%= d.state %></td>
      <td><a href="/dojos/<%= d.id =%>">Show</a><a href="/dojos/<%= d.id =%>/edit">Edit</a><a href="/dojos/<%= d.id =%>/destroy">Destroy</a></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br><br>
<a href="/new">Create Dojo</a>
